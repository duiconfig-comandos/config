  if (comando === "limpar") {
    if (!message.member.hasPermission("MANAGE_MESSAGES")) return message.reply(`***__OpÃ¡ ${message.author}, Eu Vi Que Vc Esta Sem PermissÃ£o Para Executar Esse Comando, Pessa Para Um Adm Ou Mod Ou Ate O Dono Do Server Para Ele Te Dar A PermissÃ£o!__***`)
    const deleteCount = parseInt(args[0], 10);
    if(!deleteCount || deleteCount < 0 || deleteCount > 100)
      return message.reply("***__â—Por favor, forneÃ§a um nÃºmero entre ``1`` e ``100`` para o nÃºmero de mensagens a serem excluÃ­dasâ—__***");
    
    const fetched = await message.channel.fetchMessages({limit: deleteCount});
    message.reply(`***ğŸ˜‰Vc Apagou __${deleteCount} Mensagens__ Com Sucesso!***`);
    message.channel.bulkDelete(fetched)
      .catch(error => message.reply(`***â—NÃ£o foi possÃ­vel deletar mensagens devido a: __"${error}"__â—***`));
  }

  
